#!/bin/zsh

# Variables that can hold strings:
myStr="Hello, World!"

echo $myStr '\n'        ## Output  |  Hello, World!


# Variables can also hold numbers:
myInt=1
myDecimal=2.64

# NOTE: You cannot have spaces when declaring variables. Ie. myInt = 1 will not work.
#       Instead, use myInt=1.

echo $myInt             ## Output  |  1

echo $myDecimal         ## Output  |  2.64
